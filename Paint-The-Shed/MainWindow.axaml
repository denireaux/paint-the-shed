<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Paint_The_Shed.UI.Controls"
        x:Class="Paint_The_Shed.MainWindow"
        Width="1200"
        Height="800"
        Title="Paint_The_Shed">

    <DockPanel>

        <!-- Top toolbar -->
        <Border DockPanel.Dock="Top"
                Padding="8"
                BorderBrush="#333"
                BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Palette" Click="OpenPalette_Click"/>
            </StackPanel>
        </Border>

        <!-- Canvas fills remaining space -->
        <controls:PixelCanvasControl x:Name="Canvas"/>

    </DockPanel>

</Window>